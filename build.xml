<?xml version="1.0" encoding="UTF-8"?>

<project name="YourProject" default="build">

    <target name="build" depends="prepare,composer,phpdox,phpunit,phploc,pdepend,phpmd-ci,phpcpd,phpcb"/>

    <target name="build-parallel" depends="prepare,tools-parallel,phpunit,phpcb"/>

    <target name="tools-parallel" description="Run tools in parallel">
        <parallel threadCount="2">
            <sequential>
                <antcall target="pdepend"/>
                <antcall target="phpmd-ci"/>
            </sequential>
            <antcall target="phpcpd"/>
            <antcall target="phploc"/>
            <antcall target="phpdox"/>
        </parallel>
    </target>
 
    <target name="clean" description="Cleanup build artifacts">
        <delete dir="workspace/vendor"/>
        <delete file="workspace/composer.lock"/>
        <delete dir="workspace/build/api"/>
        <delete dir="workspace/build/code-browser"/>
        <delete dir="workspace/build/logs"/>
        <delete dir="workspace/build/pdepend"/>
    </target>

     <target name="prepare" depends="clean" description="Prepare for build">
        <mkdir dir="workspace/build/api"/>
        <mkdir dir="workspace/build/code-browser"/>
        <mkdir dir="workspace/build/logs"/>
        <mkdir dir="workspace/build/pdepend"/>
    </target>

    <target name="composer" description="Installing dependencies">
        <exec executable="composer" failonerror="true">
            <arg value="install" />
            <arg value="-d" />
            <arg value="workspace" />
        </exec>
    </target>

    <target name="phpunit" description="Run unit tests with PHPUnit">
        <exec executable="phpunit" failonerror="false">
            <arg value="-c" />
            <arg value="workspace/phpunit.xml.dist" />
            <arg value="--coverage-html" />
            <arg value="workspace/build/report" />
        </exec>
    </target>

    <target name="phpdox" description="Generate API documentation using phpDox">
        <exec executable="phpdox"/>
    </target>

     <target name="phpmd" description="Perform project mess detection using PHPMD and print human readable output. Intended for usage on the command line before committing.">
        <exec executable="phpmd">
            <arg path="workspace/app" />
            <arg value="text" />
            <arg value="workspace/build/phpmd.xml" />
        </exec>
    </target>

    <target name="phpmd-ci" description="Perform project mess detection using PHPMD creating a log file for the continuous integration server">
        <exec executable="phpmd">
            <arg path="workspace/app" />
            <arg value="xml" />
            <arg value="phpmd.xml" />
            <arg value="--reportfile" />
            <arg value="workspace/build/logs/pmd.xml" />
        </exec>
    </target>

    <target name="phpcs"
         description="Find coding standard violations using PHP_CodeSniffer and print human readable output. Intended for usage on the command line before committing.">
        <exec executable="phpcs">
            <arg value="--standard=workspace/build/phpcs.xml" />
            <arg path="workspace/app" />
        </exec>
    </target>

    <target name="phpcs-ci" description="Find coding standard violations using PHP_CodeSniffer creating a log file for the continuous integration server">
        <exec executable="phpcs" output="/dev/null">
            <arg value="--report=checkstyle" />
            <arg value="--report-file=workspace/build/logs/checkstyle.xml" />
            <arg value="--standard=workspace/build/phpcs.xml" />
            <arg path="workspace/app" />
        </exec>
    </target>

     <target name="phpcpd" description="Find duplicate code using PHPCPD">
        <exec executable="phpcpd">
            <arg value="--log-pmd" />
            <arg value="workspace/build/logs/pmd-cpd.xml" />
            <arg path="workspace/app" />
        </exec>
    </target>

    <target name="phploc" description="Measure project size using PHPLOC">
        <exec executable="phploc">
           <arg value="--log-csv" />
           <arg value="workspace/build/logs/phploc.csv" />
           <arg path="workspace/app" />
        </exec>
    </target>

    <target name="pdepend" description="Calculate software metrics using PHP_Depend">
        <exec executable="pdepend">
            <arg value="--jdepend-xml=workspace/build/logs/jdepend.xml" />
            <arg value="--jdepend-chart=workspace/build/pdepend/dependencies.svg" />
            <arg value="--overview-pyramid=workspace/build/pdepend/overview-pyramid.svg" />
            <arg path="workspace/app" />
        </exec>
    </target>

    <target name="phpcb" description="Aggregate tool output with PHP_CodeBrowser">
        <exec executable="phpcb">
            <arg value="--log" />
            <arg path="workspace/build/logs" />
            <arg value="--source" />
            <arg path="workspace/app" />
            <arg value="--output" />
            <arg path="workspace/build/code-browser" />
    </exec>
 </target>

</project>
